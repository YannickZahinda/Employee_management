<div class="min-h-screen bg-gray-100 py-10">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-semibold text-gray-800 mb-6 text-center">Demande de Cong√© Maladie</h1>

    <%= form_with model: @sick_leave, local: true do |form| %>
      <% if @sick_leave.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 p-4 rounded-lg mb-4">
          <h2 class="font-semibold"><%= pluralize(@sick_leave.errors.count, "error") %> prohibited this sick leave from being saved:</h2>
          <ul class="list-disc list-inside mt-2">
            <% @sick_leave.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :start_date, class: "block text-gray-700 font-semibold mb-1" %>
        <%= form.date_select :start_date, {}, { class: "form-select block w-full mt-1 border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-blue-300" } %>
      </div>

      <div class="mb-4">
        <%= form.label :end_date, class: "block text-gray-700 font-semibold mb-1" %>
        <%= form.date_select :end_date, {}, { class: "form-select block w-full mt-1 border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-blue-300" } %>
      </div>

      <div class="mb-4">
        <%= form.label :reason, class: "block text-gray-700 font-semibold mb-1" %>
        <%= form.text_area :reason, class: "form-textarea block w-full mt-1 border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring focus:ring-blue-300", rows: 4 %>
      </div>

      <div class="flex justify-center">
        <%= form.submit 'Envoyer la demande', class: "bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300" %>
      </div>
    <% end %>
  </div>
</div>
