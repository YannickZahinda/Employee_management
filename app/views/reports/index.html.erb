<div class="min-h-screen bg-gray-100 py-10">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-semibold text-gray-800 mb-6 text-center">My Reports</h1>
    
    <div class="text-center mb-6">
      <%= link_to 'Nouveau rapport', new_report_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition duration-300" %>
    </div>
    
    <div class="bg-white shadow-md rounded-lg p-6">
      <ul class="divide-y divide-gray-200">
        <% if @reports.present? %>
          <% @reports.each do |report| %>
            <li class="py-4">
              <div class="font-bold text-gray-700">
                Créé par employé: <span class="text-blue-600"><%= report.user.email %></span>
              </div>
              <div class="text-gray-600">
                <span class="font-semibold"><%= report.title %></span> - <span><%= report.created_at.to_date %></span>
              </div>
              <p class="text-gray-500 mt-2"><%= report.content %></p>
            </li>
          <% end %>
        <% else %>
          <li class="py-4 text-gray-600 text-center">Pas de rapport reçu des employés pour le moment.</li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
