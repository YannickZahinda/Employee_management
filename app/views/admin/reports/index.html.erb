<div class="min-h-screen bg-gray-100 py-10">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-semibold text-gray-800 mb-8 text-center">Rapport des employés</h1>
    
    <% if @reports.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @reports.each do |report| %>
          <div class="bg-white shadow-lg rounded-lg p-6 transition-transform transform hover:scale-105">
            <h2 class="text-xl font-semibold text-gray-700 mb-2"><%= report.title %></h2>
            <p class="text-gray-600 mb-4"><%= report.content %></p>
            <p class="text-gray-500 text-sm">Submitted by: <%= report.user.name %></p> <!-- User email added here -->
            <p class="text-gray-500 text-sm">Submitted on: <%= report.created_at.strftime("%B %d, %Y") %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white shadow-lg rounded-lg p-6 text-center">
        <p class="text-lg text-gray-700">Pas de rapport envoyés par les employés</p>
      </div>
    <% end %>
  </div>
</div>
