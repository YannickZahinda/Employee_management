<div class="min-h-screen bg-gray-100 py-10">
  <div class="container mx-auto px-4">
    <div class="mb-6 flex justify-between items-center">
      <h1 class="text-2xl font-semibold text-gray-800">Liste des employés</h1>
      <div class="flex space-x-2">
        <%= link_to 'Import', '#', class: "bg-white text-gray-700 font-semibold py-2 px-3 rounded shadow hover:bg-gray-50 transition" %>
        <%= link_to 'Export', '#', class: "bg-white text-gray-700 font-semibold py-2 px-3 rounded shadow hover:bg-gray-50 transition" %>
        <%= link_to 'Paiements', '#', class: "bg-white text-gray-700 font-semibold py-2 px-3 rounded shadow hover:bg-gray-50 transition" %>
        <%= link_to 'Rechercher', '#', class: "bg-white text-gray-700 font-semibold py-2 px-3 rounded shadow hover:bg-gray-50 transition" %>
        <%= link_to 'Ajouter un employé', new_admin_user_path, class: "bg-green-500 text-white font-semibold py-2 px-3 rounded shadow hover:bg-green-600 transition" %>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg p-4 overflow-y-scroll employees">

      <div class="grid grid-cols-3 gap-4">
        <% @users.each do |user| %>
          <div class="bg-white rounded-lg shadow-md p-4">
            <div class="flex justify-between items-start mb-3">
              <span class="px-2 py-1 text-xs font-semibold text-green-700 bg-green-100 rounded-full"><%= user.admin? ? 'Admin' : 'Active' %></span>
              <button class="text-gray-400 hover:text-gray-600">...</button>
            </div>
            <div class="flex flex-col items-center mb-3">
            <%= image_tag user.avatar.attached? ? url_for(user.avatar) : 'default-avatar.jpg', class: "w-30 h-30 rounded-full mb-1 avatar" %>

              <h3 class="text-base font-semibold"><%= user.name %></h3>
              <p class="text-xs text-gray-500"><%= user.position %></p>
            </div>
            <div class="space-y-1 text-xs text-gray-600">
              <p><span class="font-semibold">ID:</span> <%= user.id %></p>
              <p><span class="font-semibold"><%= user.admin? ? 'Admin' : 'Employee' %></span> • 'Temps plein'</p>
              <p><%= user.email %></p>
              <p>+243994078107</p>
            </div>
            <div class="mt-3 text-xs">
              <p>Joined at <%= user.date_of_joining&.strftime('%d %b, %Y') %></p>
              <%= link_to 'Voir les details', admin_user_path(user), class: "text-blue-500 hover:underline" %> <br/>
              <%= link_to 'Voir les rapports', reports_admin_user_path(user), class: "text-blue-500 hover:underline" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
