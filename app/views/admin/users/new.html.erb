<div class="min-h-screen bg-gray-100 py-10">
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-semibold text-gray-800 mb-6 text-center">Create New User</h1>
    
    <div class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
      <%= form_with(model: [:admin, @user], local: true) do |f| %>
        
        <% if @user.errors.any? %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
            <strong class="font-bold">Whoops!</strong>
            <span class="block sm:inline"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</span>
            <ul class="mt-2">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :position, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.text_field :position, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :date_of_birth, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.date_field :date_of_birth, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :sex, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.select :sex, options_for_select(['Male', 'Female', 'Other']), {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :date_of_joining, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.date_field :date_of_joining, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :id_card, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.file_field :id_card, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-4">
          <%= f.label :admin, class: "inline-flex items-center" %>
          <%= f.check_box :admin, class: "form-checkbox h-5 w-5 text-green-600 transition duration-150 ease-in-out" %>
          <span class="ml-2 text-gray-700">Admin</span>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="flex items-center justify-between">
          <%= f.submit 'Create User', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
    
    <%= link_to 'Back', admin_users_path, class: "inline-block mt-4 text-blue-500 hover:text-blue-700" %>
  </div>
</div>