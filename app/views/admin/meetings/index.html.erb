<div class="min-h-screen bg-gray-100 py-10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-10">
      <h1 class="text-4xl font-bold text-gray-900">Réunions ultérieures</h1>
      <%= link_to 'Créér une réunion', new_admin_meeting_path, class: 'mt-6 inline-block bg-blue-600 text-white py-3 px-8 text-lg font-medium rounded-lg hover:bg-blue-700 transition duration-300 shadow-lg' %>
    </div>

    <% if @meetings.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @meetings.each do |meet| %>
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
            <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= meet.description %></h2>
            <p class="text-gray-500 mb-4"><%= meet.admin.name %> | <%= meet.start_time.strftime("%B %d, %Y") %></p>

            <div class="text-gray-700 mb-4">
              <p><strong>Début:</strong> <%= meet.start_time.strftime("%I:%M %p") %></p>
              <p><strong>Fin:</strong> <%= meet.end_time.strftime("%I:%M %p") %></p>
            </div>

            <div class="flex justify-between items-center">
              <%= link_to 'Voir les Details', '#', class: 'text-blue-600 hover:underline font-medium' %>
              <%= link_to 'Modifier', '#', class: 'text-green-600 hover:underline font-medium' %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center mt-10">
        <p class="text-gray-500 text-xl">Pas de réunion en vue pour le moment.</p>
      </div>
    <% end %>
  </div>
</div>
