<h1 class="text-3xl font-bold mb-6">Your Attendances</h1>

<table class="min-w-full divide-y divide-gray-200">
  <thead>
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @attendances.each do |attendance| %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap"><%= attendance.date %></td>
        <td class="px-6 py-4 whitespace-nowrap"><%= attendance.status.humanize %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Attendance', new_user_attendance_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none" %>
